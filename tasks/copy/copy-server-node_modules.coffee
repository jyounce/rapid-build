module.exports = (config, gulp) ->
	q = require 'q'

	copyTask = (src, dest) ->
		defer = q.defer()
		gulp.src src
			.pipe gulp.dest dest
			.on 'end', ->
				defer.resolve()
		defer.promise

	# API
	# ===
	api =
		runTask: ->
			tasks = []
			defer = q.defer()

			for appOrRb, v of config.node_modules
				for module in v.modules
					src  = config.glob.node_modules[appOrRb].src[module]
					dest = v.dist.modules[module]
					do (src, dest) ->
						tasks.push ->
							copyTask src, dest

			tasks.reduce(q.when, q()).done -> defer.resolve()
			defer.promise

	# return
	# ======
	api.runTask()